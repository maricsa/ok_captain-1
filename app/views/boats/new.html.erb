<%= form_for @boat do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<br>
<%= f.label :location %>
<%= f.text_field :location %>
<br>
<%= f.label :capacity %>
<%= f.number_field :capacity %>
<%= f.hidden_field :user_id, :value => current_user.id %>
<%= f.submit %>
<% end %>
<br>
<% if @boat.errors.full_messages.any? %>
  <ul>
    <% @boat.errors.full_messages.each do |error_message| %>
      <li><%= error_message%></li> <br />
    <% end %>
  </ul>
<% end %>