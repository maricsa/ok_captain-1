	Edit Your Boat:
	<br>
	<%= form_for @boat do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<br>
	<%= f.label :location %>
	<%= f.text_field :location %>
	<br>
	<%= f.label :capacity %>
	<%= f.number_field :capacity %>
	<% if current_admin %>
		<%= f.hidden_field :user_id, :value => current_admin.id %>
	<% else %>
		<%= f.hidden_field :user_id, :value => current_user.id %>
	<% end %>
	<%= f.submit %>
	<% end %>